
<%# @param users: リスト表示するユーザのモデルインスタンス %>

<% if users.any? %>

  <ul class="media-list">
    <% users.each do |user| %>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(user, {size: 50 }) %>" alt="<%= user.name %> icon">
        </div>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
    
    <%= paginate users %>
  </ul>
  
<% else %>
  <%# 該当ユーザなし %>
<% end %>
